                                    <ToolTip  Foreground="Black">
                                        <StackPanel>
                                            <TextBlock Text="Параметр задает диаметр отверстия червячного колеса" />
                                            <Image Source="img/Hole_gear.png" Width="200" />
                                        </StackPanel>
                                    </ToolTip>
                                </CheckBox.ToolTip>
                            </CheckBox>
