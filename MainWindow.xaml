                                <TextBox.ToolTip>
                                    <ToolTip  Foreground="Black" >
                                        <StackPanel>
                                            <TextBlock Text="Параметр задает количество витков червяка."/>
                                            <TextBlock Text="От данного параметра зависит передаточное отношение червячной передачи и угол наклона зубьев." />
