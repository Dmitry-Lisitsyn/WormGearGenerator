                            <Label Content="Средний диаметр, [мм]" Margin="0,11.4,0,8" HorizontalAlignment="Center" Grid.Row="5" Height="26" Width="173" HorizontalContentAlignment="Center" Padding="5,5,5,0"/>
                            <Button x:Name="calc_LengthWorm" HorizontalAlignment="Left" Margin="123,13.8,0,0" Grid.Row="2" VerticalAlignment="Top" Width="25" Height="22" Background="White" BorderBrush="White" Click="calc_LengthWorm_Click">
                                <StackPanel>
                                    <Image Source="img/calc.png" Height="19"  />
                                </StackPanel>
                                <Button.ToolTip>
                                    <ToolTip  Foreground="Black">
                                        <StackPanel>
                                            <TextBlock Text="Расче длины червяка" />
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Параметры червячного колеса" Margin="0,4,4,18" Grid.Column="2" BorderBrush="Black" HorizontalAlignment="Left">
