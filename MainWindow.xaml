                                    <StackPanel Height="32" Width="32">
                                        <Image Source="img/Left.png"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton x:Name="radioRight" Grid.Column="1" Margin="0,12,0,0" RenderTransformOrigin="-0.071,-0.032" Height="32" Width="70">
                                    <StackPanel Height="32" Width="32">
                                        <Image Source="img/Right.png"/>
                                    </StackPanel>
                                </RadioButton>
                            </Grid>
