                                <StackPanel>
                                    <Image Source="img/calc.png" Height="19"  />
                                </StackPanel>
                                <Button.ToolTip>
                                    <ToolTip  Foreground="Black">
                                        <StackPanel>
                                            <TextBlock Text="Расчет ширины грани" />
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>
