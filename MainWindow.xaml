<Window x:Class="WormGearGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WormGearGenerator"
        mc:Ignorable="d"
        Title="Worm Gear Generator" Height="660" Width="932" FontFamily="Javanese Text" VerticalAlignment="Center" ResizeMode="NoResize" SizeChanged="Window_SizeChanged">
    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Red"/>
                </Trigger>
            </Style.Triggers>
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <DockPanel LastChildFill="True" ToolTip="{Binding ElementName=controlWithError,Path=AdornedElement.(Validation.Errors)[0].ErrorContent}">
                            <Border BorderBrush="Red" BorderThickness="1" Height="24">
                                <AdornedElementPlaceholder Name="controlWithError" />
                            </Border>
                            <Path HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Width="10" Height="10"
                            Data="M0,0 L 1,0 1,1z"
                            Margin="-10,0,0,0"
                            Stretch="Fill"
                            Fill="Red"/>
                        </DockPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <TabControl HorizontalAlignment="Left" Height="630" VerticalAlignment="Top" Width="919" RenderTransformOrigin="0.399,0.434">
        <TabItem Margin="2,0,-2,0" RenderTransformOrigin="0.5,0.506" Width="82">
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="img/tabModel.png" Width="20" RenderTransformOrigin="0.5,0.632"/>
                    <TextBlock Text="  Модель" />
                </StackPanel>
            </TabItem.Header>
            <Grid Margin="0,0,-0.4,330.4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Expander x:Name="ExpanderModel" Header="Дополнительно" HorizontalAlignment="Left" Height="153" Margin="1,427,-1.4,-320.8" VerticalAlignment="Top" Width="914" IsExpanded="False" Expanded="Expander_Expanded" Collapsed="Expander_Collapsed" >
                    <Border BorderBrush="Black" BorderThickness="1" Height="107" Margin="0,0,8,0">
                        <Grid Margin="3.2,0.2,-6,0.4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="169*"/>
                                <ColumnDefinition Width="169*"/>
                                <ColumnDefinition Width="115*"/>
                            </Grid.ColumnDefinitions>
                            <GroupBox Header="Исходный параметр" Margin="0,0,5.6,4" BorderBrush="Black">
                                <Grid Margin="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <RadioButton x:Name="radioParam" Content="Передаточное отношение" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Checked="radioButtonParam_CheckedChanged"/>
                                    <RadioButton x:Name="radioParam1" Content="Количество зубьев колеса" HorizontalAlignment="Left" Margin="5,8.2,0,-0.4" Grid.Row="1" VerticalAlignment="Top" Checked="radioButtonParam_CheckedChanged" />
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="Размер червяка" Margin="7.4,0,2.2,4" BorderBrush="Black" Grid.Column="1" Height="101" VerticalAlignment="Bottom">
                                <Grid Margin="0,0,1,0.4" Height="66">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="22*"/>
                                        <RowDefinition Height="22*"/>
                                        <RowDefinition Height="22*"/>
                                    </Grid.RowDefinitions>
                                    <RadioButton x:Name="radioWorm" Content="Коэффициент диаметра" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Top" Height="17" Checked="radioButtonWorm_CheckedChanged"/>
