                                <ColumnDefinition Width="138.4"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="Gear_combo" Margin="5,7,5.2,5.4" Grid.Column="1" FontFamily="Times New Roman"/>
                            <TextBox x:Name="Teeth_gearValue" ToolTipService.ShowOnDisabled="True"  Text="{Binding teeth_Gear, ValidatesOnDataErrors = True, UpdateSourceTrigger = PropertyChanged}" Grid.Column="1" Margin="5.2,14,4.2,6.2" TextWrapping="Wrap" Grid.Row="1" Height="23" HorizontalContentAlignment="Center" FontFamily="Times New Roman" VerticalContentAlignment="Center" FontSize="13" TextChanged="data_TextChanged" VerticalAlignment="Stretch">
                                <TextBox.ToolTip>
                                    <ToolTip  Foreground="Black">
                                        <StackPanel>
                                            <TextBlock Text="Количество зубьев на червячном колесе. От данного параметра зависит передаточное число." />
                                            <Image Source="img/Teeth_gear.png" Width="220" />
                                        </StackPanel>
                                    </ToolTip>
                                </TextBox.ToolTip>
                            </TextBox>
                            <TextBox x:Name="Width_gearValue" ToolTipService.ShowOnDisabled="True" Text="{Binding width_Gear, ValidatesOnDataErrors = True, UpdateSourceTrigger = PropertyChanged}" Grid.Column="1" Margin="5.2,13.8,4.2,6.4" TextWrapping="Wrap" Grid.Row="2" Height="23" HorizontalContentAlignment="Center" FontFamily="Times New Roman" VerticalContentAlignment="Center" FontSize="13" TextChanged="data_TextChanged">
                                <TextBox.ToolTip>
                                    <ToolTip  Foreground="Black">
                                        <StackPanel>
                                            <TextBlock Text="Параметр задает ширину проектируемого червячного колеса" />
                                            <Image Source="img/Width_gear.png" Height="200" Width="150" />
                                        </StackPanel>
                                    </ToolTip>
                                </TextBox.ToolTip>
                            </TextBox>
                            <TextBox x:Name="Koef_smeshValue" ToolTipService.ShowOnDisabled="True" Text="{Binding koef_Smesh, ValidatesOnDataErrors = True, UpdateSourceTrigger = PropertyChanged}" Grid.Column="1" Margin="5.2,13.6,4.2,6.6" TextWrapping="Wrap" Grid.Row="3" Height="23" HorizontalContentAlignment="Center" FontFamily="Times New Roman" VerticalContentAlignment="Center" FontSize="13" TextChanged="data_TextChanged">
                                <TextBox.ToolTip>
                                    <ToolTip  Foreground="Black">
                                        <StackPanel>
                                            <TextBlock Text="Коэффициент определяет геометрию колеса." />
                                            <TextBlock Text="Положительное значение – перемещение червяка от колеса, отрицательное - перемещение червяка к колесу." />
                                        </StackPanel>
                                    </ToolTip>
                                </TextBox.ToolTip>
                            </TextBox>
                            <Label Content="Компонент" Margin="0,2,1,45.8" HorizontalContentAlignment="Center" Grid.RowSpan="2"/>
                            <Label Content="Количество зубьев" Margin="0,11.6,0,7.8" Grid.Row="1" HorizontalContentAlignment="Center" Padding="5,5,5,2"/>
                            <Label Content="Ширина грани, [мм]" Margin="16,13.8,36.8,3.4" HorizontalAlignment="Center" Grid.Row="2" Width="120" Height="26" Padding="0" HorizontalContentAlignment="Center"/>
                            <Label Content="Коэффициент смещения" Margin="0,15.4,0,0" Height="22" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Top" Width="172" Padding="0" HorizontalContentAlignment="Center"/>
                            <Label Content="Направление зубьев" Margin="0,12,0,6.8" HorizontalAlignment="Center" Grid.Row="4" Height="26" Width="172" HorizontalContentAlignment="Center" Padding="5,5,5,0"/>
                            <Label Content="Добавить отверстие, [мм]" Margin="0,11.4,0,8" HorizontalAlignment="Center" Grid.Row="5" Height="26" Width="173" HorizontalContentAlignment="Center" Padding="5,5,5,0"/>
