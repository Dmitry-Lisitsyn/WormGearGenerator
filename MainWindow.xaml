                                        </StackPanel>
                                    </ToolTip>
                                </TextBox.ToolTip>
                            </TextBox>
                            <TextBox x:Name="LengthValue"  Text="{Binding length_Worm, ValidatesOnDataErrors = True, UpdateSourceTrigger = PropertyChanged}" Grid.Column="1" Margin="5.4,13.8,4,6.4" TextWrapping="Wrap" Grid.Row="2" Height="23" FontFamily="Times New Roman" HorizontalContentAlignment="Center" FontSize="13" VerticalContentAlignment="Center" TextChanged="data_TextChanged">
                                <TextBox.ToolTip>
                                    <ToolTip  Foreground="Black">
                                        <StackPanel>
                                            <TextBlock Text="Параметр задает длину червяка." />
                                            <TextBlock Text="От данного параметра зависит количество оборотов витков." />
                                            <Image Source="img/Length_worm.png"  Width="200"/>
                                        </StackPanel>
                                    </ToolTip>
                                </TextBox.ToolTip>
                            </TextBox>
                            <TextBox x:Name="Koef_diamValue" ToolTipService.ShowOnDisabled="True"  Text="{Binding koef_diamWorm, ValidatesOnDataErrors = True, UpdateSourceTrigger = PropertyChanged}" Grid.Column="1" Height="23" Margin="5.4,15.2,4,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="4" FontFamily="Times New Roman" HorizontalContentAlignment="Center" FontSize="13" VerticalContentAlignment="Center" TextChanged="data_TextChanged">
                                <TextBox.ToolTip>
                                    <ToolTip  Foreground="Black">
                                        <StackPanel>
                                            <TextBlock Text="Коэффициент диаметра червяка q является отношением делительного диаметра червяка к его расчетному модулю." />
                                        </StackPanel>
                                    </ToolTip>
                                </TextBox.ToolTip>
                            </TextBox>
                            <TextBox x:Name="Av_diamValue" ToolTipService.ShowOnDisabled="True"  Text="{Binding av_diamWorm, ValidatesOnDataErrors = True, UpdateSourceTrigger = PropertyChanged}"  Grid.Column="1" Height="23" Margin="5.4,14.2,5,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="5" FontFamily="Times New Roman" HorizontalContentAlignment="Center" FontSize="13" VerticalContentAlignment="Center" TextChanged="data_TextChanged">
                                <TextBox.ToolTip>
                                    <ToolTip  Foreground="Black">
                                        <StackPanel>
                                            <TextBlock Text="Диаметр средней концентрической окружности червяка" />
                                            <Image Source="img/Av_diam.png"  Width="170"/>
                                        </StackPanel>
                                    </ToolTip>
                                </TextBox.ToolTip>
                            </TextBox>
                            <Label Content="Компонент" Margin="0,2,1,45.8" HorizontalContentAlignment="Center" Grid.RowSpan="2"/>
                            <Label Content="Количество витков" Margin="0,11.6,0,7.8" Grid.Row="1" HorizontalContentAlignment="Center" Padding="5,5,5,0"/>
                            <Label Content="Количество оборотов витков" Margin="4,11.6,3.6,7.8" HorizontalAlignment="Center" Grid.Row="3" Width="170" Height="26" Padding="5,5,0,0" HorizontalContentAlignment="Center"/>
