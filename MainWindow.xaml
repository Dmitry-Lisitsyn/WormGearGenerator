                                        </StackPanel>
                                    </ToolTip>
                                </TextBox.ToolTip>
                            </TextBox>
                            <TextBox x:Name="Kol_oborotovValue" ToolTipService.ShowOnDisabled="True"  Grid.Column="1" Margin="5.4,13.6,4,6.6" TextWrapping="Wrap" Grid.Row="3" RenderTransformOrigin="0.502,0.5" Height="23" FontFamily="Times New Roman" HorizontalContentAlignment="Center" FontSize="13" VerticalContentAlignment="Center" TextChanged="data_TextChanged" IsEnabled="False">
