                        <ComboBox x:Name="Peredat_combo" HorizontalAlignment="Left" Margin="20,51,0,0" VerticalAlignment="Top" Width="120" Height="25" FontFamily="Times New Roman" SelectionChanged="combo_SelectionChanged"/>
                        <ComboBox x:Name="Module_combo" HorizontalAlignment="Left" Margin="20.4,51,0,0" VerticalAlignment="Top" Width="120" Height="25" Grid.Column="1" FontFamily="Times New Roman" SelectionChanged="combo_SelectionChanged">
